<p style="color: green"><%= notice %></p>

<% content_for :title, "Comments" %>

<h1>Comentarios</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>

    <p>
      <%= link_to "Mostrar comentario", comment %>
    </p>
  <% end %>
</div>

<% if user_signed_in? %>
<%= link_to "Nuevo comentario", new_comment_path %>
<% end %>
